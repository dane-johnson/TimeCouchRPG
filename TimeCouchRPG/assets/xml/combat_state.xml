<?xml version="1.0" encoding="utf-8" ?>
<data>
	<group id="combatUI" />
		<sprite id="back" color="blue" x="0" y="0" width="200" height="300" group="combatUI" >
			<anchor x="center" x-flush="center" y="center" y-flush="center" />
		</sprite>
		<sprite id="character_display" color="white" x="2" y="2" width="196" height="96" group="combatUI" >
			<anchor x="back.left" x-flush="left" y="back.top" y-flush="top" />
		</sprite>
		<sprite id="action_display" color="white" x="2" y="102" width="196" height="196" group="combatUI" >
			<anchor x="back.left" x-flush="left" y="back.top" y-flush="top" />
		</sprite>
		<region id="player_position" x="-50" y="0" width="32" height="32" group="combatUI">
			<anchor x="character_display.center" y="character_display.center" x-flush="center" y-flush="center" />
		</region>
		<region id="enemy_position" x="50" y="0" width="32" height="32" group="combatUI">
			<anchor x="character_display.center" y="character_display.center" x-flush="center" y-flush="center" />
		</region>
		<button id="attack_button" label="Attack" x="20" y="10" group="combatUI">
			<anchor x="action_display.left" y="action_display.top" x-flush="left" y-flush="top" />
			<param type="string" value="attack_button" />
		</button>
		<dropdown id="attack_list" x="0" y="10" group="combatUI">
			<anchor x="attack_button.center" y="attack_button.bottom" x-flush="center" y-flush="top" />
			<param type="string" value="attack_list" />
		</dropdown>
		
</data>